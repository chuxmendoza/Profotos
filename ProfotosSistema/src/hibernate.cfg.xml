<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name ="hibernate.dialect">
                org.hibernate.dialect.MySQLDialect
        </property>
        <property name ="hibernate.connection.driver_class">
                com.mysql.jdbc.Driver
        </property> 
        <property name ="hibernate.connection.url">
                jdbc:mysql://localhost:3306/profotosbd
        </property> 
        <property name ="hibernate.connection.username">
                root
        </property> 
        <property name ="hibernate.connection.password">
                root
        </property> 
        <mapping resource= "profotos/entidades/mappings/Usuario.hbm.xml" />
        <mapping resource= "profotos/entidades/mappings/Egreso.hbm.xml" />
        <mapping resource= "profotos/entidades/mappings/Iva.hbm.xml" /> 
        <mapping resource= "profotos/entidades/mappings/EgresoValor.hbm.xml" />
        <mapping resource= "profotos/entidades/mappings/Sueldo.hbm.xml" />
        <mapping resource= "profotos/entidades/mappings/Venta.hbm.xml" />
        <mapping resource= "profotos/entidades/mappings/Evento.hbm.xml" />
        <!-- 
        <mapping resource= "profotos/entidades/mappings/Articulo.hbm.xml" />
        <mapping resource= "profotos/entidades/mappings/ArticuloVenta.hbm.xml" /> 
        <mapping resource= "profotos/entidades/mappings/Empleado.hbm.xml" /> 
        <mapping resource= "profotos/entidades/mappings/Historial.hbm.xml" /> 
        -->
    </session-factory>
</hibernate-configuration>	
